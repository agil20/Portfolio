
@model LoginVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- CSS -->
	<link rel="stylesheet" href="~/css/bootstrap-reboot.min.css">
	<link rel="stylesheet" href="~/css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css">
	<link rel="stylesheet" href="~/css/nouislider.min.css">
	<link rel="stylesheet" href="~/css/plyr.css">
	<link rel="stylesheet" href="~/css/photoswipe.css">
	<link rel="stylesheet" href="~/css/default-skin.css">
	<link rel="stylesheet" href="~/css/main.css">

	<!-- Favicons -->
	<link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">
	<link rel="apple-touch-icon" href="icon/favicon-32x32.png">


</head>
<body class="body">

<div class="sign section--bg" data-bg="img/section/section.jpg">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="sign__content">
					<!-- authorization form -->
					<form  method="post" class="sign__form">
					                  <div class="text-danger" asp-validation-summary="ModelOnly"></div>


						<div class="sign__group">
							<input asp-for="Email" class="sign__input" placeholder="Email">
			  <div><span class="text-danger" asp-validation-for="Email"></span></div>

						</div>

						<div class="sign__group">
							<input asp-for="Password" class="sign__input" placeholder="Password">
				                  <div><span class="text-danger" asp-validation-for="Password"></span></div>

						</div>

						
						
						<button class="sign__btn" type="submit">Sign in</button>

						<span class="sign__text">Don't have an account? <a asp-controller="account" asp-action="register">Sign up!</a></span>

						<span class="sign__text"><a asp-controller="Home" asp-action="index">Forgot password?</a></span>
					</form>
					<!-- end authorization form -->
				</div>
			</div>
		</div>
	</div>
</div>

<!-- JS -->
<script src="~/js/jquery-3.6.0.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/owl.carousel.min.js"></script>
<script src="~/js/jquery.mousewheel.min.js"></script>
<script src="~/js/jquery.mCustomScrollbar.min.js"></script>
<script src="~/js/wNumb.js"></script>
<script src="~/js/nouislider.min.js"></script>
<script src="~/js/plyr.min.js"></script>
<script src="~/js/jquery.morelines.min.js"></script>
<script src="~/js/photoswipe.min.js"></script>
<script src="~/js/photoswipe-ui-default.min.js"></script>
<script src="~/js/main.js"></script>
</body>

