@model CatalogVM
@{
    ViewData["Title"] = "Index";
}

<section class="section section--first section--bg" data-bg="img/section/section.jpg">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="section__wrap">
			
			
					
			
				</div>
			</div>
		</div>
	</div>
</section>

<div class="filter">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="filter__content">
					<div class="filter__items">
					
						<div class="filter__item" id="filter__genre">
							<span class="filter__item-label">GENRE:</span>

							<div class="filter__item-btn dropdown-toggle" role="navigation" id="filter-genre" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<input type="button" value="Action/Adventure">
								<span></span>
							</div>

							<ul class="filter__item-menu dropdown-menu scrollbar-dropdown" aria-labelledby="filter-genre">
							<a asp-action="index" > <li >All</li></a>
								@foreach (var item in Model.FilmGenresAll)
						   {
							   
								
									<a  class="subBtnProduct" data-id="@item.Id" id="mySelect" > <li >@item.Name</li></a>

								
						   }
							
								
							</ul>
						
						</div>
							    <div class="shop-header-select">
                                        <span class="select-title">Sort By:</span>
                                        <select id="sortMinMax" onchange="SortMinMax()">
                                            <option value="1">Default</option>
                                            <option value="2">IMDB (min - max)</option>
                                           
                                        </select>
                                    </div>
						
						</div>
					
						<div class="filter__item" id="filter__year">
							

							<div class="filter__item-menu filter__item-menu--range dropdown-menu" aria-labelledby="filter-year">
								<div id="filter__years"></div>
							</div>
						</div>
		
					</div>
					
				
		
				</div>
			</div>
		</div>
	</div>


<div class="catalog">
	<div class="container">
		<div id="sort" class="row row--grid">
		
			@foreach (var item in Model.Film)
		   {
			if (!item.IsDelete)
				{
					   <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
				<div class="card">
					<a asp-controller="Home" asp-action="detail" asp-route-Id="@item.Id" class="card__cover">
						<img src="~/img/@item.ImageUrl" alt="">
						<span class="card__play">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z"/></svg>
						</span>
					</a>	
					<div class="card__content">
						<h3 class="card__title"><a href="#">@item.Name</a></h3>
						<span class="card__category">
							<a href="#">@item.Name</a>
							
						</span>
						<span class="card__rate">@item.IMDB</span>
					</div>
				</div>
			</div>
				}
			
		   }
			
		
		</div>

		
	</div>
</div>



