
@model HomeVM
<section class="home">

		
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="home__title"><b>NEW ITEMS</b> OF THIS SEASON</h1>

				<button class="home__nav home__nav--prev" aria-label="prev card" type="button">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z"/></svg>
				</button>
				<button class="home__nav home__nav--next" aria-label="next card" type="button">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg>
				</button>
			</div>

			<div class="col-12">
				<div class="owl-carousel home__carousel" >
				
				

				@foreach (var item in Model.Films)
				{
					
				if (!
				
				
				item.IsDelete)
						{
								<div class="card card--big">
						<a asp-action="detail" asp-route-id="@item.Id" class="card__cover">
							<img src="img/@item.ImageUrl" alt="">
							
						</a>
						<div class="card__content">
							<h3 class="card__title"><a asp-action="detail" asp-route-Id="@item.Id">@item.Name</a></h3>
							<span class="card__category">
								<a  class="my_category" asp-action="detail" data-id="@item.Id"  asp-route-Id="@item.Id">

									@foreach (var Genre in item.FilmGenre)
								   {
									   @Genre.Genre.Name
								   }
								</a>
								
							</span>
							<span class="card__rate"> @item.IMDB</span>
						</div>
					</div>
						}
			
					
				}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="content">
	<div class="content__head">
		<div class="container">
			<div class="row">
				<div class="col-12">
					
					<h2 class="content__title">New items</h2>
				
					<ul class="nav nav-tabs content__tabs" id="content__tabs" role="tablist">
							<li class="nav-item" role="presentation">
							<a class="nav-link active" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1" aria-selected="true">
								All-Film

							</a>
				
					
					</ul>
					
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		
		<div class="tab-content" id="myTabContent">
			<div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
				<div class="row row--grid"  id="productLis">
		  <input type="hidden" id="productCoun" value="@ViewBag.ProductCount" >

				@foreach (var item in Model.Films)
			   {
				  if (!item.IsDelete)
						{ 	<div class="col-6 col-sm-12 col-lg-6">
						<div class="card card--list">
							<a  asp-action="detail"  asp-route-Id="@item.Id"class="card__cover">
								<img src="img/@item.ImageUrl" alt="">
								<span class="card__play">
								</span>
							</a>

							<div class="card__content">
								<h3 class="card__title"><a href="#">@item.Name</a></h3>
								<span class="card__category">
								@foreach (var genre in item.FilmGenre)
							   {
								   	<a  asp-action="detail" asp-route-Id="@item.Id">@genre.Genre.Name</a>
							   }
								
								</span>

								<div class="card__wrap">
									<span class="card__rate"> @item.IMDB</span>

									<ul class="card__list">
										<li>HD</li>
										<li>@item.AgeLimit</li>
									</ul>
								</div>

								<div class="card__description">
									<p>@item.Desc</p>
								</div>
							</div>
						</div>
					</div>
						}
			   }
				
				</div>

			</div>

			

		
		</div>
		<div class="col-12">
				<a  id="loadMor" class="section__btn">Show more</a>
			</div>
	</div>
</section>


<section class="section section--bg" data-bg="img/section/section.jpg">
	<div class="container">
		<div class="row">
	
			<div class="col-12">
				<h2 class="section__title">Expected premiere</h2>
			</div>
		
		</div>

		<div class="row row--grid"  id="productList">
		  <input type="hidden" id="productCount" value="@ViewBag.ProductCount" >

		@foreach (var item in Model.FilmsLoad)
	   {	
if (!item.IsDelete)
				{
							   <div class="col-6 col-sm-4 col-lg-3 col-xl-2">

				<div class="card">
					<a asp-action="detail" asp-route-Id="@item.Id" class="card__cover">
						<img src="img/@item.ImageUrl" alt="">
						<span class="card__play">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z"/></svg>
						</span>
					</a>
					<div class="card__content">
						<h3 class="card__title"><a asp-action="detail" asp-route-Id="@item.Id">@item.Name</a></h3>
						<span class="card__category">
						@foreach (var genre in item.FilmGenre)
					   {
						   	<a asp-action="detail" asp-route-Id="@item.Id">@genre.Genre.Name</a>
					   }
						
						</span>
						<span class="card__rate">@item.IMDB</span>
					</div>
				</div>
			</div>
				}
	   }
			
			
			
		</div>
		<div class="col-12">
				<a  id="loadMore" class="section__btn">Show more</a>
			</div>
	</div>
</section>