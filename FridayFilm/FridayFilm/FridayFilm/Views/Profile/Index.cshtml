					<div class="col-12 col-sm-6 col-xl-3">
						<div class="stats">
							<span>Premium plan</span>
							<a ><p>$@Model.AppUser.Balance</p></a>
							<img src="img/credit-card.svg" alt="">
						</div>
					</div>
			
					<div class="col-12 col-sm-6 col-xl-3">
						<div class="stats">
							<span>Your comments</span>
							<p>@Model.Comments.Count()</p>
